# Signals and slots can be called hierarchically

name dummy_module \
signal parent \
task dummy_module -test_ret 1

# Parent emits signal A
slot parent \
signal A \
name parent \
task dummy_module -test_ret 1

# Since our parent ran with nok status, all tasks with slot A should be called

slot A \
signal B \
name A \
task dummy_module -test_ret 1

slot A \
signal C \
name B \
task dummy_module -test_ret 0

# slot C exists, but does not run, because the task that emitted
# C returned 'ok'.
slot C \
name C \
task dummy_module -test_ret 0

signal this_signal_doesnt_exist \
name test_with_signal_that_doesnt_exist \
task dummy_module -test_ret 0

# This is just a signal that no body emits, so ignore it.
slot invalid_slot \
name invalid_slot \
task dummy_module -test_ret 1
